{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!
{% endblock %}

{% block body %}
	<main class="container" style="height: 580px">
		<section class="row">
			{% for product in category.products %}
				<div class="col-3">
					<article class="card" style="height: 450px">
						<div class="card-body d-flex flex-column justify-content-between">
							<h2 class="card-title mb-3">{{ product.name }}</h2>
							<img style="height: 200px" src="{{ asset('build/images/' ~ product.image) }}" class="card-img-top mb-3" alt="{{ product.name }}">
							<p class="card-text mb-3">{{ product.description }}</p>
							<p class="card-text mb-3">Prix:
								{{ product.price }}â‚¬</p>
							<a href="{{ path('cart_add',{id:product.id})}}" class="btn btn-primary">Ajouter au panier</a>
						</div>
					</article>
				</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}
