{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!
{% endblock %}

{% block body %}
	<main class="container" style="height: 700px">
		<section class="row">
			<div>
				<a href="{{ path('app_products') }}">
					<img style="height:50px" src="{{ asset('build/images/retour-derriere.png') }}" alt="Retour à la liste des produits">
				</a>
			</div>
			{% for product in category.products %}
				<div class="col-3">
					<article class="card" style="height: 600px">
						<div class="card-body d-flex flex-column justify-content-between">
							<h2 class="card-title mb-3">{{ product.name }}</h2>
							<img style="height: 200px" src="{{ asset('build/images/' ~ product.images[0]) }}" class="card-img-top mb-3" alt="{{ product.name }}">
							<p class="card-text mb-3">{{ product.description }}</p>
							<p class="card-text mb-3">Prix:
								{{ product.price }}€</p>
							<a href="{{ path('app_products_details',{'name':product.name})}}" class="btn btn-primary">Voir les détails</a>
							<a href="{{ path('cart_add',{id:product.id})}}" class="btn btn-primary">Ajouter au panier</a>
						</div>
					</article>
				</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}
