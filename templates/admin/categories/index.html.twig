{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% include "_partials/_adminnav.html.twig"%}
			<main class="col-9 border border-light bg-white p-2">
				<h1>Liste des catégories</h1>
				<table class="table">
					<thead>
						<tr>

							<th>ID</th>
							<th>Nom</th>
							<th>Parent</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<td>{{ categorie.id }}</td>
								<td>{{ categorie.name }}</td>
								<td>
									{% if categorie.parent is not null %}
										{{ categorie.parent.name }}
									{% endif %}
								</td>

								<td>
									<a href="{{path('app_admin_category_edit',{'id': categorie.id })}}" class="btn btn-success">Modifier<a/>
										<a href="{{ path('app_admin_category_delete',{'id': categorie.id})}}" class="btn btn-danger" onclick="return confirm('Vous être sûr de vouloir supprimer ce category?');">Supprimer<a/>
										</td>

									</tr>
								{% endfor %}
							</tr>
						</tbody>
					</tbody>
				</table>
			</main>
		</div>
	</div>


{% endblock %}
