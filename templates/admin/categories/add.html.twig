{% extends 'base.html.twig' %}

{% block title %}Ajouter des categories
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Ajouter des categories</h1>
				<form method="post" action="{{ path('app_admin_category_add') }}" enctype="multipart/form-data">
					{% include "categories/_form.html.twig" with { 'button_label': 'Sauvegarder' }%}
					<a class="btn btn-secondary" href="{{ path('app_admin_categories') }}">Annuler la modification</a>
				</form>
			</div>
		</section>

		<a href="{{ path('app_admin_categories')}}" class="btn btn-primary">Retour</a>


	</main>
{% endblock %}
